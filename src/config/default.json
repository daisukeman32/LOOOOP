  "theme": {
    "name": "dark",
    "colors": {
      "background": "#1e1e1e",
      "surface": "#2d2d2d",
      "primary": "#0078d4",
      "text": "#ffffff",
      "textSecondary": "#cccccc",
      "border": "#3e3e3e",
      "graphBackground": "#000000",
      "graphGrid": "#333333",
      "graphCurve": "#ffffff",
      "graphHandle": "#ffffff",
      "graphHandleHover": "#0078d4"
    }
  },
  "paths": {
    "defaultProjectDir": "~/Documents/LOOOOP/Projects/",
    "defaultExportDir": "~/Videos/LOOOOP/",
    "tempDir": "temp/"
  },
  "ffmpeg": {
    "presetProfiles": {
      "web": {
        "resolution": "1920x1080",
        "bitrate": "5000k",
        "fps": 30,
        "codec": "libx264",
        "preset": "medium"
      },
      "social": {
        "resolution": "1080x1080",
        "bitrate": "8000k",
        "fps": 30,
        "codec": "libx264",
        "preset": "medium"
      },
      "highQuality": {
        "resolution": "1920x1080",
        "bitrate": "20000k",
        "fps": 60,
        "codec": "libx264",
        "preset": "slow"
      }
    },
    "proxySettings": {
      "resolution": "640x360",
      "bitrate": "1000k",
      "fps": 30,
      "codec": "libx264",
      "preset": "ultrafast"
    }
  },
  "performance": {
    "maxMemoryUsage": "2GB",
    "enableGPUAcceleration": true,
    "maxConcurrentProcesses": 4,
    "tempFileCleanupInterval": 3600,
    "cacheSize": "500MB"
  },
  "debug": {
    "enableLogging": true,
    "logLevel": "info",
    "enablePerformanceMetrics": false
  }
