{
  "name": "loooop",
  "version": "1.0.0",
  "description": "LOOOOP - プロフェッショナル向けループ動画作成ツール",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "video",
    "loop",
    "editor",
    "electron",
    "ffmpeg"
  ],
  "author": "LOOOOP Development Team <dev@loooop.app>",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0",
    "bezier-easing": "^2.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0"
  },
  "build": {
    "appId": "app.loooop.desktop",
    "productName": "LOOOOP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "ffmpeg/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}